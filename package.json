{
  "name": "brousla-app",
  "version": "1.0.0",
  "description": "Electron + React desktop MVP with Python backend",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_PORT=5173 concurrently \"npm:dev:renderer\" \"npm:dev:electron\" \"npm:dev:backend\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "dev:backend": "python ./server/main.py",
    "build": "npm run build:renderer && electron-builder -wml",
    "build:renderer": "vite build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "echo 'add linter later'",
    "start": "electron .",
    "debug": "electron . --inspect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clamprou/brousla-app.git"
  },
  "author": "Christos Lamproy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/clamprou/brousla-app/issues"
  },
  "homepage": "https://github.com/clamprou/brousla-app#readme",
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.0.1",
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20",
    "@vitejs/plugin-react": "^4.3.3",
    "wait-on": "^8.0.2",
    "vite": "^5.4.8",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "axios": "^1.7.7",
    "lucide-react": "^0.453.0"
  },
  "build": {
    "appId": "com.brousla.app",
    "files": [
      "dist/**",
      "electron/**",
      "server/**",
      "assets/**",
      "models/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "brousla-setup-${version}.exe"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  }
}
